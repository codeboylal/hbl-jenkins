pipeline {
    agent any

    stages {
        stage('Repo Scan') {
            
            steps {
                echo 'Repository scan with Trivy'
                sh 'trivy repo  --branch dev https://github.com/codeboylal/hbl-jenkins.git'
            }
        }

        stage('Code Fetch') {
            
            steps {
                echo 'Code fetch form GitHub'
                git url:'https://github.com/codeboylal/hbl-jenkins.git', branch: 'dev'
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run HTML validation tests
                    echo 'Running HTML validation tests'
                    sh 'html-validate index.html'

                    // Run CSS validation tests
                    echo 'Running CSS validation tests'
                    sh 'csslint styles.css'

                    // Run JavaScript linting tests
                    echo 'Running JavaScript linting tests'
                    sh 'eslint scripts.js'

                    // Run link checker tests!
                    echo 'Running link checker tests'
                    sh 'linkchecker http://localhost:81'
                }
            }
        }

        stage('Build') {
            steps {
                sh 'docker build -t my-new-website .'
            }
        }

        stage('Image Scan') {
            steps {
                echo 'Docker Image scanning with Trivy'
                sh 'trivy image my-new-website'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy on container'
                sh 'docker run -d -p 81:80 my-new-website'
            }
        }
    }
}
